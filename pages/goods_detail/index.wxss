page {
  padding-bottom: 100rpx;
}
swiper {
  height: 450rpx;
  text-align: center;
}
swiper image {
  width: 50%;
}
.detail_info .price {
  color: var(--themeColor);
  font-size: 36rpx;
  font-weight: 600;
  padding-left: 10rpx;
}
.detail_info .content {
  display: flex;
}
.detail_info .content .leftText {
  font-size: 30rpx;
  flex: 4;
  padding: 10rpx 20rpx 10rpx 10rpx;
}
.detail_info .content .collect {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  border-left: 2rpx solid #000;
}
.detail_info .content .collect .icon-shoucang {
  font-size: 40rpx;
}
.detail_info .content .collect .icon-shoucang1 {
  font-size: 40rpx;
  color: var(--themeColor);
}
.detail_info .content .collect .collect_text {
  font-size: 28rpx;
}
.introduce .title {
  color: var(--themeColor);
  font-size: 36rpx;
  font-weight: 600;
  padding: 20rpx 0 20rpx 10rpx;
  border-top: 8rpx solid #ccc;
  border-bottom: 8rpx solid #ccc;
}
.bottom_tool {
  position: fixed;
  border-top: 2rpx solid #dedede;
  width: 100%;
  height: 100rpx;
  display: flex;
  background-color: #fff;
  left: 0;
  bottom: 0;
}
.bottom_tool .tool_item {
  position: relative;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  color: #000;
}
.bottom_tool .tool_item button {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.bottom_tool .cart_add {
  flex: 2;
  background-color: orange;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.bottom_tool .buy {
  flex: 2;
  background-color: orangered;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
