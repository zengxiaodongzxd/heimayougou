<view class="tabs">
    <view class="tabs_title">
        <view class="tabs_title_item {{item.isActive?'active':''}}" bindtap="handleTitleChange" data-index="{{index}}" wx:for="{{tabs}}" wx:key="id">
            {{item.title}}
        </view>
    </view>
    <view class="tabs_content">
        <slot></slot>
    </view>
</view>